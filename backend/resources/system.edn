 ;; Migratus config: run with the JDBC URL above
 :migratus
 {:store                :database
  :migration-dir        #or [#env MIGRATIONS_DIR "migrations"]
  :migration-table-name #or [#env MIGRATION_TABLE "schema_migrations"]
  :db {:connection-uri #ref [:jdbc-url]}}

